<%- include('./layout/header.ejs') %> 
 <div class="container">
  <h1>Blog Setup</h1>
  <form action=""method="Post" enctype="multipart/form-data">
    <div class="row">
      <div class="col-sm-20">
        <input type="text" name="blog_title" placeholder="Enter blog title" required>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-20">
        <input type="file" name="blog_image" placeholder="choose file">
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-20">
        <textarea type="description" name="description" placeholder="Enter description " required></textarea>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-20">
        <input type="name" name="name" placeholder="Enter Admin Name" required>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-20">
        <input type="email" name="email" placeholder="Enter emai_id" required>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-20">
        <input type="password" name="password" placeholder="Enter your password" required>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-sm-20">
        <input type="submit" class="btn btn-primary" value="Blog Setup">
      </div>
    </div>
  </form>
 </div>

 <% if (typeof message !== 'undefined') { %>
  <p style="color: red;"><%- message %></p>
<% } %>


