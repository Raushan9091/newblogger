<%- include('../layout/admin-header.ejs') %>
<!-- Page Content -->
<div id="content" class="p-4 p-md-5 pt-5">
    <h2 class="mb-4">Add News</h2>

    <div class="container" id=" addPost">
        <form method="POST">
            <div class="row">
                <div class="col-sm-12">
                    <h5>Title</h5>
                    <input type="text" name="title" required placeholder="Enter News Title Here!!" class="w-100">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#uploadModal">
                        Upload Image
                    </button>
                    <input type="hidden" name="image" id="image">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <h5>Content</h5>
                    <textarea name="content" rows="5" placeholder="Enter News Content Here!!"
                        class="w-100"></textarea>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <input type="submit" value="Add Post" class="btn btn-primary">
                </div>
            </div>
        </form>
    </div>

    <% if (typeof message !=='undefined' ) { %>
        <p style="color: rgb(27, 179, 128);">
            <%= message %>
        </p>
        <% } %>

</div>

<!-- Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Upload</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="uploadForm" enctype="multipart/form-data">

                <div class="modal-body">

                    <input type="file" name="image" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
            
        </div>
    </div>
</div>
<script>
  $(document).ready(function(){
    $('#uploadForm').submit(function(event){
        event.preventDefault();
        $.ajax({
            type: 'POST',
            url: "/upload-post-image",
            data: new FormData(this),
            cache: false,
            contentType: false,
            processData: false,
            success:function(data){
                if(data.success == true){
                    $('#image').val(data.path);
                    alert(data.msg);
                    $('#uploadModal').modal('hide');
                }else{
                    alert(data.msg);
                }
            },
        })
    })

    $('#addPost').submit(function(event){
        event.preventDefault();

        let formData = {};
        $.each($(this).serializeArray(), function(i, field){
            formData[field.name] = field.value;
        });
        $.ajax({
            type: 'POST',
            url: "/create-post",
            data: formData,
            success:function(data){
                if(data.success == true){
                    alert(data.msg);
                    formData._id = data._id;
                    
                    let socket = io();
                    socket.emit("new_post", formData)
                }else{
                    alert(data.msg);
                }
            }
        })
    })
})
</script>
<%- include('../layout/admin-footer.ejs') %>